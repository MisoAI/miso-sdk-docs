<div class="container-lg">
  <div id="hero">
    <h1 class="hero-title">Miso JavaScript SDK<br>Documentation</h1>
  </div>
</div>

<div id="components" class="container-lg my-md-4">
  <div class="row">
    <div class="col">
      <ul class="component-list list-unstyled">
      {%- for component in intro.components -%}
        <li class="component">
          <a href="{{ [component.path, '/'] | join | url }}">
            <h3 class="component-title">
              <span>{{ component.title }}</span>
            </h3>
          </a>
          <p class="component-desc">{{ component.desc }}</p>
        </li>
      {%- endfor -%}
      </ul>
    </div>
  </div>
</div>
