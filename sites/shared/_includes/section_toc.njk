<h3>Table of Content</h3>
{%- for section in sitemap[chapter].sections -%}
  {%- if helpers.isCurrentPage(page.url, chapter, section.path) -%}
  <div class="section-toc">
    <div class="page-list list-unstyled">
    {%- for p in section.pages -%}
      <div class="page mb-4 {{ '__preview__' if p.preview }}">
        <h5 class="title mb-2">
          <a href="{{ ['/', chapter, p.path, '/'] | join | url }}">{{ p.title }}</a>
        </h5>
        {%- if p.summary -%}
        <p class="mb-0">
          {{ p.summary }}
        </p>
        {%- endif -%}
        {%- if p.outline -%}
        <ul class="outline-list">
        {%- for o in p.outline -%}
          <li class="outline-item">{{ o }}</li>
        {%- endfor -%}
        </ul>
        {%- endif -%}
      </div>
    {%- endfor -%}
    </div>
  </div>
  {%- endif -%}
{%- endfor -%}
